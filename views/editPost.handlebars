<div class="editPost ">
    <form class="editPost-form">
        <div class="form-group">
            <h3> Edit Post </h2>
        </div>

        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-input" type="text" id="update-title" required />
        </div>

        <div class="form-group">
            <label for="Content">Content</label>
            <textarea class="form-input" type="text" rows="5" id="update-content" required></textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit" id="update-post" data-id="{{blogPost.id}}"> Update Post
            </button>

             <button class="btn btn-primary" type="submit" id="delete-post" data-id="{{blogPost.id}}"> Delete
            </button>
        </div>
    </form>
</div>

<script src="./js/editPost.js"> </script>