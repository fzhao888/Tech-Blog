<div class="row mb-4 blogPost">

  <div class="col-md-5 post">
    <h2>
      <a href="/blogpost/{{id}}">{{title}}</a>
    </h2>

    <p>Post by {{username}} on {{format_date date_created}}</p>
  </div>

  <div class="col-md-7">
    <p>
      {{content}}
    </p>
  </div>
  

  {{#if logged_in}}
  <div class="display-comments">

  </div>

  <form class="form addComment-form" data-id="{{id}}">
    <div class="form-group">
      <label for="comment">Comment</label>
    </div>

    <div class="form-group">
      <textarea class="form-input" type="text" rows="5" id="content" required></textarea>
    </div>

    <div class="form-group">
      <button class="btn btn-primary" type="submit" id="submit-comment" > Submit </button>
    </div>
  </form>

</div>
{{/if}}



<script src="../js/blogPost.js"></script>